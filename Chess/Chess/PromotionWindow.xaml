<Window x:Class="Chess.PromotionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pawn Promotion" Height="200" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <TextBlock Text="Choose a piece for promotion:" 
                   VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="16" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Queen" Width="60" Click="OnPromotionSelected" />
            <Button Content="Rook" Width="60" Click="OnPromotionSelected" />
            <Button Content="Bishop" Width="60" Click="OnPromotionSelected" />
            <Button Content="Knight" Width="60" Click="OnPromotionSelected" />
        </StackPanel>
    </Grid>
</Window>
